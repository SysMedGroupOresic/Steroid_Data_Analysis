Package: Maaslin2
Title: "Multivariable Association Discovery in Population-scale
        Meta-omics Studies"
Year: 2021
Version: 1.16.0
Authors@R: c(
  person("Himel", "Mallick", email = "himel.stat.iitk@gmail.com", role = "aut"), 
